{
  "name": "pinto",
  "version": "0.1.0",
  "engines": {
    "node": "14.x"
  },
  "website": "https://pintopinto.herokuapp.com/",
  "scripts": {
    "build": "tsc",
    "start": "node ./build/index.js",
    "dev": "npm run build && npx nodemon",
    "prod": "npx heroku local -p 443",
    "logs": "npx heroku logs --tail --source app",
    "pretty-quick": "pretty-quick",
    "lint": "eslint --ignore-path .gitignore --ext .ts .",
    "prepare": "husky install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "peer": "^0.6.1",
    "socket.io": "^4.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged && npx pretty-quick --staged",
      "pre-push": "npx tsc && npm run lint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      ".env",
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/index.ts --pretty"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/node": "^15.12.4",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "pretty-quick": "^3.1.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "author": "David Solis",
  "repository": "https://github.com/pinto-pinto/pinto",
  "description": "WebRTC signal server for peer connections.",
  "keywords": [
    "WebSocket Server",
    "Heroku",
    "Socket.io",
    "PeerJS Server"
  ],
  "private": true
}
